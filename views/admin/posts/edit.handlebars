<div class="container-fluid">
  <!-- Breadcrumbs-->

  <h1>Edit Post</h1>
  {{#if fetchingPosts}}

  <form action="/admin/posts/update/{{fetchingPosts.id}}" method="post" enctype="multipart/form-data">

    <div class="form-group">
      <label for="exampleInputEmail1">Title</label>
      <input type="title" name="title" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
        placeholder="Enter email" value={{fetchingPosts.title}}>
    </div>


    <div class="form-group">
      <label for="exampleInputPassword1">Category</label>
      <select name="category" id="stauts" class="form-control">

        {{#select fetchingPosts.category}}
        {{#each fetchingCategory}}
          <option value="{{id}}">{{cattitle}}</option>
        {{/each}}
        {{/select}}


      </select>
    </div>



    <div class="form-group">
      <label for="exampleInputPassword1">Status</label>

      <select name="status" id="stauts" class="form-control">
       
        {{#select fetchingPosts.status}}
          <option value="public">Public</option>
          <option value="private">Private</option>
          <option value="draft">Draft</option>
        {{/select}}
      </select>
    </div>


    <div class="form-check">
      <label for="allowComments" class="form-check-label">
        <input name="allowComments" type="checkbox" class="form-check-input" id="allowComments"
          {{#if fetchingPosts.allowComments}} checked="checked" {{/if}}>
        Allow Comments
      </label>
    </div>


    <div class="form-group">
      <label for="body">Body</label>
      <textarea name="body" cols="30" rows="10" class="form-control" id="body" placeholder="Enter Description">"{{fetchingPosts.body}}</textarea>
    </div>


    <div class="form-group">
      <label for="files">File Upload</label>
      <input type="file" name="filedata">
    </div>


    <button type="submit" class="btn btn-primary">update</button>
  </form>
  {{/if}}
</div>